<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="id.ac.usu.it.rosterlive.fragment.ProfileFragment">

<RelativeLayout
    android:padding="32dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profil_image"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:border_width="4dp"
        app:border_color="@color/colorAccent"/>

    <ProgressBar
        android:id="@+id/pb_profile_image"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:visibility="visible"/>

</RelativeLayout>

<TextView
    android:id="@+id/tv_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
    android:textStyle="bold"
    android:textColor="@android:color/black"
    android:padding="4dp"
    tools:text="Fiqih Fatwa"/>

<TextView
    android:id="@+id/tv_nim"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
    android:textStyle="bold"
    android:textColor="@android:color/black"
    android:padding="4dp"
    tools:text="141402118"/>

<TextView
    android:id="@+id/tv_jurusan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
    android:textStyle="bold"
    android:textColor="@android:color/black"
    android:padding="4dp"
    tools:text="Teknologi Informasi"/>

<Button
    android:id="@+id/b_logout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="Logout"
    android:layout_marginTop="32dp"
    android:textColor="@android:color/white"
    android:background="@color/colorAccent"/>

</LinearLayout>
